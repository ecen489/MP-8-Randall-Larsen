<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center"
    tools:context=".ToActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20sp">

        <EditText
            android:id="@+id/userID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Student ID"
            android:layout_weight="2"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20sp">

        <Button
            android:id="@+id/buttQuery1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Query1"
            android:onClick="gradeClick"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/buttQuery2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Query2"
            android:onClick="Query2Click"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/buttout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:onClick="outClick"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/buttpush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Push"
            android:onClick="pushClick"
            android:layout_weight="1"
            />
    </LinearLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvAnimals"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

</LinearLayout>